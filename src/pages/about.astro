---
import BaseLayout from '@layouts/BaseLayout.astro';

const pageTitle = 'About me';
const hobbies = ['reading', 'writing', 'coding', 'cycling'];
const skillset = [
  'HTML',
  'CSS',
  'Sass',
  'Bootstrap',
  'Tailwind',
  'JavaScript',
  'TypeScript',
  'Node.js',
  'React',
  'Remix',
  'Astro',
  'PHP',
  'Drupal 8+',
];
---

<BaseLayout pageTitle={pageTitle}>
  <h2>Quick facts</h2>

  <ul>
    <li>My name is MikaÃ«l.</li>
    <li>I'm a full-stack developer from Gatineau, Canada.</li>
    <li>
      My hobbies include: {
        hobbies.map((hobby, index) => {
          return index !== hobbies.length - 1 ? `${hobby}, ` : ` and ${hobby}`;
        })
      }
    </li>
  </ul>

  <h2>Skillset</h2>

  <ul>
    {skillset.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
</BaseLayout>
