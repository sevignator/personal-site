---
import Social from './Social.astro';

const currentYear = new Date().getFullYear();
---

<footer>
  <div class='container footer-content'>
    <span>Copyright © {currentYear} Mikaël Sévigny</span>
    <div class='social-links'>
      <Social platform='github' username='sevignator' />
    </div>
  </div>
</footer>

<!-- CSS -->

<style>
  footer {
    padding-block: 10px;
    margin-top: 40px;
    border-top: solid 1px #ddd;
  }

  .footer-content {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    gap: 20px;
    height: fit-content;
    text-align: center;
  }
  .social-links {
    display: flex;
  }
</style>
