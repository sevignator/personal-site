---
type Props = {
  platform: string;
  username: string;
};

const { platform, username } = Astro.props;
---

<a href={`https://www.${platform}.com/${username}`}>{platform}</a>

<!-- CSS -->

<style>
  a {
    display: inline-block;
    padding: 0.35em 0.7em;
    background-color: #4c1d95;
    border-radius: 4px;
    color: white;
    text-decoration: none;
  }
</style>
